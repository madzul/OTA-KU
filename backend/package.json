{
  "name": "backend",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:local": "env-cmd -f ./.env.local tsx watch src/index.ts",
    "build": "tsc",
    "drizzle-kit:generate": "drizzle-kit generate",
    "drizzle-kit:migrate": "drizzle-kit migrate",
    "drizzle-kit:migrate:local": "env-cmd -f ./.env.local drizzle-kit migrate",
    "test": "vitest run",
    "coverage": "vitest run --coverage",
    "test:local": "env-cmd -f ./.env.local vitest run",
    "coverage:local": "env-cmd -f ./.env.local vitest run --coverage",
    "db:seed": "env-cmd -f ./.env.local tsx src/db/seed.ts",
    "db:reset": "env-cmd -f ./.env.local tsx src/db/reset.ts"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.8",
    "@hono/swagger-ui": "^0.5.1",
    "@hono/zod-openapi": "^0.19.2",
    "backend": "file:",
    "bcrypt": "^5.1.1",
    "cloudinary": "^2.6.0",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.41.0",
    "env-cmd": "^10.1.0",
    "form-data": "^4.0.2",
    "hono": "^4.7.4",
    "nodemailer": "^6.10.1",
    "pg": "^8.13.3",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/bcrypt": "^5.0.2",
    "@types/node": "^20.11.17",
    "@types/nodemailer": "^6.4.17",
    "@types/pg": "^8.11.11",
    "@vitest/coverage-v8": "^3.0.8",
    "drizzle-kit": "^0.30.5",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "vitest": "^3.0.8"
  }
}
